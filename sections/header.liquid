<header class="header">
  <h1>
    {{ shop.name }}
  </h1>
  <ul>
    {% for link in linklists.main-menu.links %}
      <li>
        {{ link.title | link_to: link.url }}
      </li>
    {% endfor %}
  </ul>

  {% if section.settings.show_search %}
    <form action="/search">
      <input type="search" name="q" />
      <button type="submit">Search</button>
    </form>
  {% endif %}
</header>


<style>
  .header {
    background: {{ section.settings.header_background }}
  }
</style>

{% stylesheet %}
  .header {
    padding: 20px;
  }
{% endstylesheet %}

{% javascript %}
  console.log('hey from header')
{% endjavascript %}


{% schema %}
  {
    "name": "Header",
    "settings": [
      // {
      //   "type": "checkbox",
